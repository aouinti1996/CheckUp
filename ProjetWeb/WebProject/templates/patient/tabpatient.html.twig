{% extends 'base.html.twig' %}
{% block testaffiche %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Patients Tables</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">Patients</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Patients Table</h5>
                            <p>Laliste actuelle des patients <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable</p>

                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Prenom</th>
                                    <th scope="col">Date Naissance</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Numero de Telephone</th>
                                    <th scope="col">Supprimer</th>
                                    <th scope="col">Modifier</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in tabpatients %}
                                <tr>
                                    <td scope="row">{{ p.nom }}</td>
                                    <td>{{ p.prenom }}</td>
                                    <td>{{ p.datenaissance |date }}</td>
                                    <td>{{ p.email }}</td>
                                    <td>{{ p.numerotelephone }}</td>

                                    <td>

                                    <form action="{{ path('deletepatient',{'id':p.id}) }}">

                                        <button type="submit" class="btn btn-primary" >Supprimer</button>


                                    </form>
                                    </td>
                                    <td>
                                    <form action="{{ path('updatepatient',{'id':p.id}) }}">

                                            <button type="submit" class="btn btn-primary" >Modifier</button>


                                    </form>
                                    </td>
                                </tr>
                              {% endfor %}
                                </tbody>
                            </table>
                            <td>
                                <form action="{{ path('addpatient')}}">
                                <button type="submit" class="btn btn-primary" >cr√©er un noveau patient</button>
                                </form>

                            </td>
                            <!-- End Table with stripped rows -->

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->




{% endblock %}