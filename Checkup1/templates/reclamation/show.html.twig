{% extends "Front/Frontoffice.html.twig" %}

{% block body %}
    <h1>Reclamation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>IdUser</th>
                <td>{{ reclamation.idUser }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ reclamation.object }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reclamation.status }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                {% if reclamation.category %}
                    <td>{{ reclamation.category }}</td>
                {% else %}
                    <td>no category</td>
                {% endif %}
            </tr>
            <tr>
                <th>Screenshot</th>
                <td>{{ reclamation.screenshot }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reclamation.email }}</td>
            </tr>
            {% if rep != "" %}
                <tr>
                    <th>Reponse</th>
                    <td>{{ rep }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('reclamation_index') }}">back to list</a>

    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">edit</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
