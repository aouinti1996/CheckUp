{% extends "Back/Backoffice.html.twig" %}
{% block body %}


    <main id="main" class="main">
        <h1>Reclamatio ID:{{  reclamation.id}}</h1>
        <div class="col-lg-10">
            <div class="card">

                <div class="card-body">

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ reclamation.id }}</td>
                        </tr>
                        <tr>
                            <th>IdUser</th>
                            <td>{{ reclamation.idUser }}</td>
                        </tr>
                        <tr>
                            <th>Object</th>
                            <td>{{ reclamation.object }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ reclamation.status }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ reclamation.description }}</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            {% if reclamation.category %}
                                <td>{{ reclamation.category }}</td>
                            {% else %}
                                <td>no category</td>
                            {% endif %}
                        </tr>
                        <tr>
                            <th>Screenshot</th>
                            <td>{{ reclamation.screenshot }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ reclamation.email }}</td>
                        </tr>
                        {% if rep != "" %}
                            <tr>
                                <th>Reponse</th>
                                <td>{{ rep }}</td>
                                <td><a href="{{ path('reponse_update', {'id': reclamation.idReponse})}}"><button type="button" class="btn btn-outline-success">Update Repons</button></a></td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>

                    <a href="{{ path('admin_reclamation') }}"><button type="button" class="btn btn-outline-info btn-sm">back to list</button></a>

                    {# <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">edit</a> #}

                    {#{{ include('reclamation/_delete_form.html.twig') }}  #}
                </div>
            </div>
        </div>
    </main>

{% endblock %}
